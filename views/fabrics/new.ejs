<% include ../partials/header %>
<section class="jumbotron text-center mini-header">
  <h1 class="display-3">Add a New Fabric</h1>
  <a class="btn" href="/fabrics">Back to Fabrics</a>
</section>
<div class="row form-row m-5">
  <form action="/fabrics" method="post" class="fabric-form" enctype="multipart/form-data">
    <input class="form-control my-1" type="text" name="name" placeholder="Name"/>
    <input class="form-control my-1" type="file" name="image" id="image" accept="image/*" required/>
    <input class="form-control my-1 tallForm" type="text" name="description" placeholder="Description"/>
    <button class="btn card-btn btn-block btn-primary">Submit</button>
  </form>
  </div>
