<% include ../partials/header %>
<section class="jumbotron text-center mini-header">
  <h1 class="display-3"><%=fabric.name%></h1>
  <a class="btn" href="/fabrics">Back to Fabrics</a>
</section>
<section>
  <div class="container">
    <img class="show" src="<%=fabric.image%>"/>
    <p class="my-3">
      <%=fabric.description%>
    </p>
    <p><em>
      By <%=fabric.author.username%>
    </em></p>
    <div class="btn-div">
      <a href="/fabrics/<%=fabric._id%>" class="btn btn-primary btn-show">Make Project</a>
      <a href="/fabrics/<%=fabric._id%>" class="btn btn-primary btn-show">Edit</a>
      <a href="/fabrics/<%=fabric._id%>" class="btn btn-primary btn-show">Delete</a>
    </div>
  </div>
</section>
<% include ../partials/footer %>
